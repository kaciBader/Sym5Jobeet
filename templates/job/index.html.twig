{% extends 'layout.html.twig' %}

{% block title %}
    Job index
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('vendor/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}
   <div id="jobs">
      <table class="jobs">
        {% for job in jobs %}
          <tr class="{{ cycle(['even', 'odd'], loop.index) }}">
            <td class="location">{{ job.location }}</td>
            <td class="position">
              <a href="{{ path('job_show', { 'id': job.id, 'company': job.companySlug, 'location': job.locationSlug, 'position': job.positionSlug}) }}">
                {{ job.position }}
              </a>
            </td>
            <td class="company">{{ job.company }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
